<div class="country-info">
      <div class="country-info__header">
        <img
          class="country-info__flag"
          src="{{flags.svg}}"
          alt="{{name.official}} flag"
          width="30"
          height="30"
        />
        <p class="country-info__title">{{name.official}}</p>
      </div>
      <ul class="country-info__list list">
        <li class="country-info__item">
          <p>
            <span class="country-info__name">Capital</span>
            :
            <span class="country-info__value">{{capital}}</span>
          </p>
        </li>

        <li class="country-info__item">
          <p>
            <span class="country-info__name">Population</span>
            :
            <span class="country-info__value">{{population}}</span>
          </p>
        </li>

        <li class="country-info__item">
          <p>
            <span class="country-info__name">Languages</span>
            :
            {{#each languages}}
            <span class="country-info__value">
              
                 {{this}}               
             
            </span>
            {{/each }}
           
          </p>
        </li>
      </ul>
    </div>

